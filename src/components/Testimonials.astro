<section id="testimonios" class="py-20 px-4 md:px-8 lg:px-16 relative">
    <!-- Burbujas flotantes de fondo -->
    <div class="floating-bubbles">
        <div class="bubble" style="width: 100px; height: 100px; left: 10%; top: 20%; background-color: #97cbdc; animation-delay: 0s;"></div>
        <div class="bubble" style="width: 50px; height: 50px; left: 20%; top: 40%; background-color: #018abd; animation-delay: 1s;"></div>
        <div class="bubble" style="width: 70px; height: 70px; right: 15%; top: 30%; background-color: #004581; animation-delay: 2s;"></div>
        <div class="bubble" style="width: 40px; height: 40px; right: 25%; top: 60%; background-color: #97cbdc; animation-delay: 3s;"></div>
        <div class="bubble" style="width: 80px; height: 80px; left: 40%; bottom: 20%; background-color: #dde8f0; animation-delay: 4s;"></div>
    </div>

    <div class="max-w-7xl mx-auto relative z-10">
        <!-- Encabezado de sección -->
        <div class="text-center mb-16">
            <h2 class="text-4xl md:text-5xl font-bold mb-4" style="color: #001b48;">Lo Que Dicen Nuestros Pacientes</h2>
            <div class="w-24 h-1 mx-auto rounded-full" style="background-color: #018abd;"></div>
            <p class="mt-6 text-lg text-gray-600 max-w-3xl mx-auto">
                Descubre por qué nuestros pacientes confían en nosotros para el cuidado de su salud dental y la de sus familias.
            </p>
        </div>

        <!-- Tarjetas de testimonios -->
