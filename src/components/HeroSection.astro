---
// src/components/HeroSection.astro
import { Image } from 'astro:assets';
import heroImage from '../assets/hero/dentist-hero.jpg';

---

<section id="inicio" class="flex flex-col justify-center items-center relative min-h-[90vh] flex items-center min-w-[99vw]">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 min-w-sm">
      <div class="flex flex-col lg:flex-row items-center justify-between gap-8">
        <!-- Text Content -->
        <div class="lg:w-1/2 space-y-6 md:space-y-8 text-center lg:text-left">
          <h1 class="text-4xl md:text-5xl xl:text-6xl font-bold text-white leading-tight md:leading-snug">
            <span class="typewriter-block">
              <span class="inline-block overflow-hidden">
                <span class="typewriter text-[#6e43f8]">Tu sonrisa saludable<br class="hidden md:block"> es nuestra prioridad</span>
              </span>
            </span>
          </h1>
          
          <p class="text-lg md:text-xl text-color5 opacity-0 animate-in-up delay-200 scroll-reveal max-w-2xl mx-auto lg:mx-0">
            Cuidado dental integral con tecnología de vanguardia
          </p>
  
          <div class="opacity-0 animate-in-up delay-300 scroll-reveal">
            <a 
              href="#contacto" 
              class="inline-block px-8 py-3 md:px-10 md:py-4 bg-color2 text-[#b37efb] rounded-full text-lg md:text-xl font-semibold hover:text-white hover:bg-[#6e43f8] transition-all duration-300 hover:scale-105 shadow-lg"
              aria-label="Agendar cita dental"
            >
              Agendar consulta
            </a>
          </div>
  
          <!-- SEO Text -->
          <div class="sr-only">
            <h2>Dentista en Ciudad</h2>
            <p>Clínica dental especializada en implantes, ortodoncia y blanqueamiento dental. Atención personalizada y planes de tratamiento accesibles.</p>
          </div>
        </div>
  
        <!-- Image Section -->
        <div class="lg:w-1/2 opacity-0 animate-in-right delay-500 scroll-reveal w-full max-w-2xl">
          <Image 
            src={heroImage}
            alt="Dra. María Pérez realizando un examen dental profesional"
            class="rounded-lg shadow-2xl hover-scale object-cover w-full h-auto"
            width={600}
            height={400}
            loading="eager"
            format="webp"
            sizes="(max-width: 1024px) 100vw, 50vw"
          />
        </div>
      </div>
    </div>
  </section>
  
  <style>
    .typewriter-block {
      display: inline-block;
      overflow: hidden;
    }
  
    .typewriter {
      display: inline;
      animation: typewriter 1.8s steps(30) forwards,
                 blink-caret 0.75s step-end infinite;
      white-space: normal;
      text-wrap: balance;
      word-break: keep-all;
    }
  
    @keyframes typewriter {
      from { 
        width: 0;
        opacity: 0;
      }
      to { 
        width: 100%;
        opacity: 1;
      }
    }
  
    @media (max-width: 768px) {
      .typewriter {
        animation: typewriter 1.2s steps(20) forwards,
                   blink-caret 0.75s step-end infinite;
        font-size: 2.5rem;
      }
      
      h1 {
        line-height: 1.2 !important;
      }
    }
  </style>